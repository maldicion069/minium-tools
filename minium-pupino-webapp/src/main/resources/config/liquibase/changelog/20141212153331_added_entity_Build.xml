<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity Build.
    -->
    <changeSet id="20141212153331" author="jhipster">
        <createTable tableName="T_BUILD">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="number" type="integer"/>
            <column name="name" type="varchar(255)"/>
            <column name="artifact" type="LONGTEXT"/>
           	 
           	 <!-- NEW FIELDS -->
             <column name="result" type="varchar(255)"/>
             <column name="duration" type="integer"/>
             <column name="timestamp" type="BIGINT"/>
             <column name="key" type="varchar(255)"/>
             
             
            <column name="project_id" type="bigint"/>
        </createTable>
        
         <loadData encoding="UTF-8"
                  file="config/liquibase/projects.csv"
                  separator=","
                  tableName="T_PROJECT"/>
         
        
                  
        <addForeignKeyConstraint baseColumnNames="project_id"
                                 baseTableName="T_BUILD"
                                 constraintName="fk_build_project_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_PROJECT"/>
       	 
        <loadData encoding="UTF-8"
                  file="config/liquibase/builds.csv"
                  separator=","
                  tableName="T_BUILD"/>
    </changeSet>
</databaseChangeLog>
